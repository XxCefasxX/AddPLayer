<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Para desarrollo: permitir tráfico no encriptado -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- O configuración específica para tu dominio local -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Para emulador Android -->
        <domain includeSubdomains="true">192.168.x.x</domain> <!-- Tu IP local -->
    </domain-config>
</network-security-config>